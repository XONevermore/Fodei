<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.OnboardingFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        attrs:layout_constraintBottom_toBottomOf="@id/main"
        attrs:layout_constraintTop_toTopOf="@id/main" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        attrs:layout_constraintTop_toBottomOf="@id/vpAuth"
        attrs:layout_constraintLeft_toRightOf="@id/main"
        attrs:layout_constraintRight_toLeftOf="@id/main" />

</androidx.constraintlayout.widget.ConstraintLayout>